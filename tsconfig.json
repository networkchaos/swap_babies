{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./build",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowJs": true,
    "noImplicitAny": false,
    "types": ["node", "mocha", "chai"]
  },
  "include": [
    "src/**/*",
    "scripts/**/*",
    "test/**/*",
    "hardhat.config.ts",
    "ignition/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
